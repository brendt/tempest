{
    "name": "tempest/framework",
    "description": "The PHP framework that gets out of your way.",
    "require": {
        "php": "^8.3",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.6",
        "ext-dom": "*",
        "ext-mbstring": "*",
        "giggsey/libphonenumber-for-php": "^8.13",
        "egulias/email-validator": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "larapack/dd": "^1.1",
        "phpstan/phpstan": "^1.10.0",
        "friendsofphp/php-cs-fixer": "^3.21",
        "pestphp/pest": "^2.34"
    },
    "bin": [
        "tempest"
    ],
    "autoload": {
        "psr-4": {
            "Tempest\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Tempest\\": "tests/"
        }
    },
    "scripts": {
        "pest": "vendor/bin/pest --display-warnings --display-skipped --display-deprecations --display-errors --display-notices --compact",
        "coverage": "vendor/bin/pest --coverage-html build/reports/html --coverage-clover build/reports/clover.xml --compact",
        "csfixer": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "phpstan": "vendor/bin/phpstan analyse src tests app",
        "qa": [
            "composer csfixer",
            "composer phpstan",
            "composer pest"
        ]
    },
    "license": "MIT",
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
